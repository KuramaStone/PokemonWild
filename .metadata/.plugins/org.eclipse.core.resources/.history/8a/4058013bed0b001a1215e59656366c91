package me.brook.PokemonCreator.input;

import java.awt.Dimension;
import java.awt.GridLayout;
import java.awt.image.BufferedImage;

import javax.swing.ImageIcon;
import javax.swing.JButton;
import javax.swing.JPanel;

import me.brook.PokemonCreator.PokemonCreator;
import me.brook.PokemonCreator.world.tile.TileType;

public class TileScroller extends JPanel {

	private TileType current;
	private MouseInput input;

	public TileScroller(PokemonCreator creator) {
		input = creator.getInput();

		addTiles();
	}

	private void addTiles() {

		int columns = 5;
		int total = 0;
		for(TileType type : TileType.values()) {
			total += type.getImages().length;
		}
		int rows = 100;//total / columns;

		GridLayout grid = new GridLayout(rows, columns, 2, 2);
		this.setLayout(grid);

		for(TileType type : TileType.values()) {
			for(int j = 0; j < type.getImages().length; j++) {
				BufferedImage image = type.getImages()[j];
				JButton icon = new JButton(new ImageIcon(image));
				this.add(icon);
				icon.setSize(new Dimension(image.getWidth(), image.getHeight()));
			}
		}

	}

}
