package me.brook.PokemonWild.graphics.record;

import java.awt.image.BufferedImage;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.IOException;
import java.util.ArrayList;
import java.util.List;

import javax.imageio.stream.FileImageOutputStream;
import javax.imageio.stream.ImageOutputStream;

import me.brook.PokemonWild.PokemonWild;

public class Recorder {

	private static final File parent = new File("C:\\Users\\Stone\\PokemonWild\\recording");

	private GifSequenceWriter writer;

	public Recorder() {
		ImageOutputStream outputStream;
		try {
			outputStream = new FileImageOutputStream(new File(parent, System.currentTimeMillis() + ".gif"));
			writer = new GifSequenceWriter(outputStream, BufferedImage.TYPE_INT_RGB, 1000 / PokemonWild.FPS,
					true);
		}
		catch(IOException e) {
			e.printStackTrace();
		}
	}

	public void saveImages() {
		writer.close();
	}

	public void addImage(BufferedImage buffer) {
		try {
			writer.writeToSequence(buffer);
		}
		catch(IOException e) {
			e.printStackTrace();
		}
	}

}
