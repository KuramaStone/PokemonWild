package me.brook.PokemonCreator.input;

import java.awt.GridLayout;

import javax.swing.ImageIcon;
import javax.swing.JButton;
import javax.swing.JPanel;

import me.brook.PokemonCreator.PokemonCreator;
import me.brook.PokemonCreator.world.tile.TileType;

public class TileScroller extends JPanel {

	private TileType current;
	private MouseInput input;

	public TileScroller(PokemonCreator creator) {
		input = creator.getInput();

		addTiles();
	}

	private void addTiles() {

		this.setLayout(new GridLayout(1, 1));

		for(int i = 0; i < 50; i++) {
			for(TileType type : TileType.values()) {
				for(int j = 0; j < type.getImages().length; j++) {
					JButton label = new JButton(new ImageIcon(type.getImages()[j]));
					this.add(label);
				}
			}
		}

	}

}
